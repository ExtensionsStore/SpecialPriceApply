<?xml version="1.0" encoding="UTF-8"?>
<!-- 
/**
 * Category special prices
 * 
 * @category    Aydus
 * @package     Aydus_SpecialPriceApply
 * @author      Aydus <davidt@aydus.com>
 */
-->
<config>
    <modules>
        <Aydus_SpecialPriceApply>
            <version>1.0.0</version>
        </Aydus_SpecialPriceApply>
    </modules>
	<adminhtml>
	    <events>
	        <adminhtml_catalog_category_tabs>
	            <observers>
	                <specialpriceapply_tab>
	                    <class>specialpriceapply/observer</class>
	                    <method>addCategorySpecialPricesTab</method>
	                </specialpriceapply_tab>
	            </observers>
	        </adminhtml_catalog_category_tabs>
	        <catalog_category_prepare_save>
	            <observers>
	                <specialpriceapply_save>
	                    <class>specialpriceapply/observer</class>
	                    <method>applySpecialPrices</method>
	                </specialpriceapply_save>
	            </observers>	        
	        </catalog_category_prepare_save>
	        <catalog_product_save_before>
	            <observers>
	                <product_specialprice_apply>
	                    <class>specialpriceapply/observer</class>
	                    <method>productSpecialPriceApply</method>
	                </product_specialprice_apply>
	            </observers>	        
	        </catalog_product_save_before>
			<catalog_product_edit_action>
		        <observers>
		            <product_specialprice_date>
		                <class>specialpriceapply/observer</class>
		                <method>displaySpecialPriceDate</method>
		           </product_specialprice_date>
		        </observers>
		    </catalog_product_edit_action>
	    </events>
        <layout>
            <updates>
                <specialpriceapply>
                    <file>aydus/specialpriceapply.xml</file>
                </specialpriceapply>
            </updates>
        </layout>
	</adminhtml>
	<admin>
	    <routers>
	        <adminhtml>
	            <args>
	                <modules>
	                    <Aydus_SpecialPriceApply before="Mage_Adminhtml">Aydus_SpecialPriceApply_Adminhtml</Aydus_SpecialPriceApply>
	                </modules>
	            </args>
	        </adminhtml>
	    </routers>
	</admin>    
    <global>
	    <helpers>
            <specialpriceapply>
                <class>Aydus_SpecialPriceApply_Helper</class>
            </specialpriceapply>            
	    </helpers>
        <blocks>
            <specialpriceapply>
                <class>Aydus_SpecialPriceApply_Block</class>
            </specialpriceapply>            
        </blocks>
        <models>
        	<specialpriceapply>
                <class>Aydus_SpecialPriceApply_Model</class>
            </specialpriceapply>
        </models>   
		<resources>
			<aydus_specialpriceapply_setup>
				<setup>
					<module>Aydus_SpecialPriceApply</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</aydus_specialpriceapply_setup>
		</resources>        
    </global>
</config>